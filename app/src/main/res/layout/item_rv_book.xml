<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp">

    <ImageView
        android:id="@+id/iv_thumbnail_book"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:src="@color/colorAccent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font_medium"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="제목"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_thumbnail_book"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_author_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_medium"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="작가"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title_book"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_book" />

    <TextView
        android:id="@+id/tv_contents_book"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/font_medium"
        android:includeFontPadding="false"
        android:maxLines="4"
        android:text="내용"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_detailurl_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title_book"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_book" />

    <Button
        android:id="@+id/btn_detailurl_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="도서 상세 페이지로 이동"
        android:fontFamily="@font/font_medium"
        android:includeFontPadding="false"
        android:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>